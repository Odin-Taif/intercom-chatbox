{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    // Treat files as modules even if it doesn't use import/export
    "moduleDetection": "force",
    // Ignore module structure
    "module": "Preserve",
    "moduleResolution": "node",
    // Allow JSON modules to be imported
    "resolveJsonModule": true,

    // Allow JS files to be imported from TS and vice versa
    "allowJs": true,

    // Use correct ESM import behavior
    "esModuleInterop": true,

    // Disallow features that require cross-file awareness
    "isolatedModules": true,

    "target": "es2016",
    "sourceMap": true,
    "checkJs": false,
    "outDir": "./dist", // Specify output directory
    "rootDir": "./src", // Specify root directory for input files
    "skipLibCheck": true /* Skip type checking all .d.ts files. */
  },

  "include": ["src/**/*.ts"], // Include all TypeScript files in the src folder
  "exclude": ["node_modules", "dist", "./src/tests/"] // Exclude output and node_modules directories
}
